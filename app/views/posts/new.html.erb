<h1> Create New <%= @place.name %> Post </h1>

<%= form_with model: @post do |form| %>
 
  <p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p>

  <p>
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </p>
 
  <p>
    <%= form.label "posted_on", "Date (MM/DD/YYYY)" %>
    <%= form.text_field "posted_on" %>
  </p>
  

  <%= form.hidden_field "place_id"%>
  <%= form.hidden_field "created_at"%>
  <%= form.hidden_field "updated_at"%>
  <%= form.submit "Save Post" %>
<% end %>